
﻿@using Microsoft.AspNetCore.Routing
@using NeonCinema_Client.Pages.Admin
@using NeonCinema_Client.Pages.Client

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(LayoutAdmin)">
                <NotAuthorized>
                    <p>Bạn không có quyền truy cập trang này.</p>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
           @*  <RouteView RouteData="@routeData" DefaultLayout="@typeof(LayoutAdmin)" /> *@
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(LayoutAdmin)">
                <p role="alert">Bạn chưa đăng nhập. Vui lòng đăng nhập để sử dụng</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>


