@page "/layout"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BHD Star Layout</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Logo -->
            <div class="logo">
                <img src="logo.png" alt="BHD Star" class="img-fluid" style="width: 120px;">
            </div>
            <!-- Navigation -->
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a href="#" class="nav-link text-white">Phim</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Rạp</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Thành viên</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Khuyến mãi</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Tin tức</a></li>
                </ul>
            </nav>
            <!-- User Actions -->
            <div class="user-actions">
                <input type="text" class="form-control d-inline w-auto" placeholder="Tìm kiếm phim">
                <button class="btn btn-outline-light ms-2">Đăng nhập</button>
            </div>
        </div>
    </header>

    <!-- Banner Section -->
    <section class="banner my-4">
        <div class="container-fluid">
            <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/Client/slide1.jpg" class="d-block w-100 h-100" alt="Banner 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/Client/slide2.jpg" class="d-block w-100 h-100" alt="Banner 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/Client/slide3.jpg" class="d-block w-100 h-100" alt="Banner 2">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>

    <!-- Movie List -->
    <section class="movies">
        <div class="container">
            <h2 class="text-center mb-4">Phim Đang Chiếu</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <div class="col">
                    <div class="card movie-card">
                        <img src="/images/Client/cam.jpg" class="card-img-top" loading="lazy">
                        <div class="card-body">
                            <div class="tags mb-2">
                                <span class="badge bg-danger">18</span>
                                <span class="badge bg-dark">Phụ đề</span>
                                <span class="badge bg-success">3D</span>
                            </div>
                            <h5 class="card-title">CÁM</h5>
                            <p class="card-text">Thể loại phim: <span class="genre">Horror</span></p>
                            <button class="btn buy-ticket-btn" >
                                <i class="fa-solid fa-ticket"></i> MUA VÉ NGAY
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="/images/Client/phim2.jpg" class="card-img-top" alt="Movie 2">
                        <div class="card-body text-center">
                            <button class="btn btn-primary">Đặt vé</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="/images//Client/phim4.jpg" class="card-img-top" alt="Movie 3">
                        <div class="card-body text-center">
                            <button class="btn btn-primary">Đặt vé</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="/images/Client/phim6.jpg" class="card-img-top" alt="Movie 4">
                        <div class="card-body text-center">
                            <button class="btn btn-primary">Đặt vé</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p>© 2024 BHD Star. All Rights Reserved.</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#" class="text-white">Facebook</a></li>
                <li class="list-inline-item"><a href="#" class="text-white">Instagram</a></li>
            </ul>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


