@code {
	[Parameter] public EventCallback OnClose { get; set; }

	private bool IsOpen { get; set; }

	public void Open()
	{
		IsOpen = true;
	}

	public void Close()
	{
		IsOpen = false;
		OnClose.InvokeAsync();
	}
}

@if (IsOpen)
{
	<div class="modal">
		<div class="modal-content">
			<span class="close" @onclick="Close">&times;</span>
			<div class="container">
				<h1 style="color: green;" align="center">Buy Ticket - Deadpool and Wolverine</h1>
				<hr>

				<div class="col-12">
					<div class="row">
						<div class="col-2">
							<button class="btn showtime" style="background-color: red; color: white;">21/9-Sat</button>
						</div>
						<div class="col-2">
							<button class="btn showtime">22/9-Sun</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">23/9-Mon</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">24/9-Tue</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">25/9-Wed</button>

						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-2">
							<button class="btn showtime" style="background-color: red; color: white;">15:00</button>
						</div>
						<div class="col-2">
							<button class="btn showtime">17:15</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">19:45</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">21:00</button>

						</div>
						<div class="col-2">
							<button class="btn showtime">23:00</button>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<style>
	.modal {
		display: block;
		position: fixed;
		z-index: 101;
		left: 0;
		top: 15px;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
	}

	.modal-content {
		position: absolute;
		background-color: white;
		padding: 20px;
		border-radius: 8px;
		width: 1500px;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
	}

	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		cursor: pointer;
	}
</style>