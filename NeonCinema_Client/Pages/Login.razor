@page "/login"
@using NeonCinema_Client.Pages.Client
@using System.IdentityModel.Tokens.Jwt
@layout LayoutClient
@inject NavigationManager _navi
@inject Blazored.LocalStorage.ILocalStorageService _localstorgae
<body>
    <div class="background-video">
        <video autoplay muted loop id="bg-video">
            <source src="/images/Ngày 24.... trailer - Phim kinh dị - KC_ 22.04.2022.mp4" type="audio/mp4">
        </video>
    </div>
    <div class="login-container">
        <h2>Đăng Nhập</h2>
        <EditForm Model="@loginModel" OnValidSubmit="LoginAccount">
            <DataAnnotationsValidator />
            <ValidationSummary />
          
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <p class="text-danger">@errorMessage</p>
            }
            <div class="input-group">
                <label for="username">Email hoặc số điện thoại</label>
                <InputText id="username" class="form-control" @bind-Value="loginModel.EmailorPhone" required />
            </div>
            <div class="input-group">
                <label for="password">Mật Khẩu</label>
                <InputText id="password" type="password"  class="form-control" @bind-Value="loginModel.Password" required />
            </div>
            <div class="d-flex justify-content-center">
                @if (isProcessing)
                {
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                }
               else
               {
                    <button type="submit">Đăng Nhập</button>
               }
                
            </div>
            <div class="links">
                <a href="#">Quên Mật Khẩu?</a>
                <a href="#">Đăng ký</a>
            </div>
        </EditForm>
    </div>
</body>





@code {
    private LoginModel loginModel = new LoginModel();
    private bool isProcessing;
    private string errorMessage;
    private string account;
    private string pass;
    HttpClient _http = new HttpClient();

    public async Task LoginAccount()
    {
        isProcessing = true;
        errorMessage = null;

        try
        {
            var login = await _http.PostAsJsonAsync("https://localhost:7211/api/Login/Login", loginModel);
            if (login.IsSuccessStatusCode)
            {
                try
                {
                    var content = await login.Content.ReadAsStringAsync();
                    var token = new JwtSecurityTokenHandler().ReadJwtToken(content);
                    var claim = token.Claims;
                    var name = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value;
                    var nameidentifier = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value;
                    var mobilephone = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/mobilephone").Value;
                    var email = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress").Value;     
                    var address = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/streetaddress").Value;
                    var dateofbirth = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/dateofbirth").Value;
                    var gender = claim.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/gender").Value;
                    await _localstorgae.SetItemAsync("userId", nameidentifier.Trim());
                    await _localstorgae.SetItemAsync("mobilephone", mobilephone.Trim());
                    await _localstorgae.SetItemAsync("email", email.Trim());
                    await _localstorgae.SetItemAsync("address", address.Trim());
                    await _localstorgae.SetItemAsync("dateofbirth", dateofbirth.Trim());
                    await _localstorgae.SetItemAsync("gender", gender.Trim());
                    await _localstorgae.SetItemAsync("name", name.Trim());
                    _navi.NavigateTo("/customer-profile");
                }
                catch (Exception ex)
                {
                    errorMessage = $"Lỗi khi xử lý JSON: {ex.Message}";
                }
            }
            else
            {
                errorMessage = "Thông tin đăng nhập không chính xác" ;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Có lỗi xảy ra: {ex.Message}";
        }
        isProcessing = false;
    }

    public class LoginModel
    {
        public string EmailorPhone { get; set; }
        public string Password { get; set; }
    }
}