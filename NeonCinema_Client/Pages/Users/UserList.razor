<div class="edit-container">
    <h3>Chỉnh sửa Thông Tin Người Dùng</h3>

    <form>
        <div class="form-group">
            <label for="fullName">Tên đầy đủ:</label>
            <input type="text" id="fullName" name="fullName" value="John Doe" />
        </div>

        <div class="form-group">
            <label for="phoneNumber">Số điện thoại:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="0123456789" />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="johndoe@example.com" />
        </div>

        <div class="form-group">
            <label for="gender">Giới tính:</label>
            <select id="gender" name="gender">
                <option value="Male" selected>Nam</option>
                <option value="Female">Nữ</option>
                <option value="Other">Khác</option>
            </select>
        </div>

        <div class="form-group">
            <label for="images">Hình ảnh:</label>
            <input type="file" id="images" name="images" value="ProfilePicture.jpg" />
        </div>

        <div class="form-group">
            <label for="dateOfBirth">Ngày sinh:</label>
            <input type="date" id="dateOfBirth" name="dateOfBirth" value="1990-01-01" />
        </div>

        <div class="form-group">
            <label for="address">Địa chỉ:</label>
            <input type="text" id="address" name="address" value="123 Main St, Springfield" />
        </div>

        <div class="form-group">
            <label for="status">Trạng thái:</label>
            <select id="status" name="status">
                <option value="Active" selected>Hoạt động</option>
                <option value="Inactive">Không hoạt động</option>
            </select>
        </div>

        <div class="form-group">
            <label for="roleID">ID vai trò:</label>
            <input type="text" id="roleID" name="roleID" value="12345678-1234-1234-1234-123456789012" />
        </div>

        <br />
        <div class="form-groupp">
            <button type="submit" class="btn-submit">Lưu Thay Đổi</button>
        </div>
    </form>
</div>
<style>
    .edit-container {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    .btn-submit {
        background-color: #007bff; /* Màu xanh cho nền của nút */
        color: white; /* Màu chữ trắng */
        border: 1px solid #007bff; /* Viền màu xanh */
        padding: 10px 20px; /* Padding cho nút */
        border-radius: 5px; /* Bo góc nút */
        cursor: pointer; /* Con trỏ khi hover lên nút */
        font-size: 16px; /* Kích thước chữ */
    }

        .btn-submit:hover {
            background-color: #0056b3; /* Màu nền khi hover */
            border-color: #0056b3; /* Màu viền khi hover */
        }
</style>

<style>
    .user-container {
        display: flex; /* Sử dụng flexbox để sắp xếp hình ảnh và thông tin bên cạnh nhau. */
        gap: 15px; /* Khoảng cách giữa hình ảnh và thông tin. */
        margin-top: 20px; /* Khoảng cách phía trên của container với các phần tử khác. */
        margin-left: 150px; /* Khoảng cách phía trái của container với lề của phần tử chứa nó. */
    }

    .user-image {
        display: flex; /* Để hình ảnh có thể căn chỉnh theo chiều dọc. */
        align-items: center; /* Căn chỉnh hình ảnh theo chiều dọc. */
    }

    .image-large {
        width: 170px; /* Kích thước bề ngang của hình ảnh. */
        height: 170px; /* Kích thước bề cao của hình ảnh. */
        border-radius: 100%; /* Bo tròn các góc của hình ảnh. */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Thêm bóng cho hình ảnh. */
        object-fit: cover; /* Đảm bảo hình ảnh không bị biến dạng, giữ tỷ lệ khung hình và lấp đầy phần tử chứa. */
    }

    .user-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Chia đều thành 2 cột. */
        gap: 15px; /* Khoảng cách giữa các ô trong lưới. */
        margin-left: 15px; /* Khoảng cách giữa thông tin và hình ảnh. */
    }

    .form-group {
        margin-bottom: 0; /* Loại bỏ khoảng cách phía dưới của mỗi nhóm thông tin. */
    }

        .form-group label {
            font-weight: bold; /* Làm cho nhãn thông tin nổi bật hơn. */
            font-size: 14px; /* Kích thước chữ của nhãn nhỏ hơn. */
        }

        .form-group p {
            font-size: 12px; /* Kích thước chữ của thông tin nhỏ hơn. */
            margin: 0; /* Loại bỏ khoảng cách mặc định phía trên và dưới của đoạn văn. */
        }
</style>
