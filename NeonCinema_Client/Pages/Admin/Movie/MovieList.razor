@page "/movie"
@layout LayoutAdmin

<div class="container-fluid mt-5">
    <h3 class="text-center text-secondary-emphasis">Danh Sách Phim</h3>

    <!-- Search and Filter Section -->
    <div class="row mb-4 p-3 search-filter-container">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên..." />
        </div>

        <div class="col-md-4">
            <select class="form-select">
                <option value="">Chọn thể loại</option>
                <option value="Kinh dị">Kinh dị</option>
                <option value="Tình cảm">Tình cảm</option>
                <!-- Thêm các thể loại khác nếu cần -->
            </select>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Trạng thái:</label>
                </div>
                <div class="col-md-8">
                    <div class="d-flex">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="status" id="all" value="all" checked>
                            <label class="form-check-label" for="all">Tất Cả</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="status" id="resigned" value="resigned">
                            <label class="form-check-label" for="resigned">Đang chiếu</label>
                        </div>
                    </div>
                    <div class="form-check mt-1">
                        <input class="form-check-input" type="radio" name="status" id="working" value="working">
                        <label class="form-check-label" for="working">Sắp chiếu</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Movie Table -->
    <table class="table table-hover employee-table">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Hình Ảnh</th>
                <th class="text-center">Tên Phim</th>
                <th class="text-center">Ngày Phát Hành</th>
                <th class="text-center">Thể Loại</th>
                <th class="text-center">Độ Tuổi</th>
                <th class="text-center">Quốc Gia</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center align-middle">1</td>
                <td class="text-center align-middle">
                    <img src="/images/Client/phim1.jpg" alt="Hình Ảnh" class="rounded-circle" style="height: 70px; width: 70px;" />
                </td>
                <td class="text-center align-middle">Tên Phim 1</td>
                <td class="text-center align-middle">2024-09-01</td>
                <td class="text-center align-middle">Kinh dị</td>
                <td class="text-center align-middle">13+</td>
                <td class="text-center align-middle">Việt Nam</td>
                <td class="text-center align-middle">
                    <button class="btn btn-primary">Chỉnh sửa</button>
                    <button class="btn btn-danger">Xóa</button>
                </td>
            </tr>
            <tr>
                <td class="text-center align-middle">2</td>
                <td class="text-center align-middle">
                    <img src="/images/Client/phim2.jpg" alt="Hình Ảnh" class="rounded-circle" style="height: 70px; width: 70px;" />
                </td>
                <td class="text-center align-middle">Tên Phim 2</td>
                <td class="text-center align-middle">2024-08-15</td>
                <td class="text-center align-middle">Tình cảm</td>
                <td class="text-center align-middle">16+</td>
                <td class="text-center align-middle">Mỹ</td>
                <td class="text-center align-middle">
                    <button class="btn btn-primary">Chỉnh sửa</button>
                    <button class="btn btn-danger">Xóa</button>
                </td>
            </tr>

        </tbody>
    </table>
</div>
