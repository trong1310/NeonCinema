<style>
    .nav-menu {
        background-color: #ffffff;
        padding: 0; /* Remove padding for better alignment */
        width: 240px;
        height: 100vh;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

        .nav-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .nav-menu ul li {
                position: relative;
                position: relative;
            }

                .nav-menu ul li a {
                    text-decoration: none;
                    color: #343a40;
                    display: flex;
                    align-items: center; /* Align icon and text */
                    padding: 15px 20px; /* Increase height for menu items */
                    font-size: 16px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .nav-menu ul li a i {
                        margin-right: 15px;
                        font-size: 18px;
                    }

                    .nav-menu ul li a:hover {
                        background-color: #f8f9fa;
                        color: #007bff;
                    }

                .nav-menu ul li ul {
                    display: none;
                    padding-left: 20px;
                }

                .nav-menu ul li:hover ul {
                    display: block;
                }

                .nav-menu ul li ul li a {
                    font-size: 14px;
                    padding: 10px 20px;
                    transition: background-color 0.3s;
                }

                    .nav-menu ul li ul li a:hover {
                        background-color: #e9ecef;
                        color: #007bff;
                    }

    .dropdown-toggle {
        padding: 15px 20px; /* Đảm bảo padding giống như các mục khác */
        display: flex; /* Sử dụng flexbox để căn chỉnh biểu tượng và chữ */
        align-items: center; /* Căn giữa theo chiều dọc */
        font-size: 16px; /* Kích thước chữ giống như các mục khác */
        padding-left: 100px;
    }
    /* Adjust user-info section */
    .user-info {
        text-align: center;
        padding: 10px 0; /* Reduce padding for closer alignment */
        border-bottom: 1px solid #dee2e6;
        margin: 0; /* Remove bottom margin */
        display: flex; /* Use flexbox for centering */
        flex-direction: column; /* Stack vertically */
        align-items: center; /* Center child elements */
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .user-name {
        color: #343a40;
        font-size: 18px;
        font-weight: bold;
        margin: 0; /* Ensure no margin */
    }

    /* Adjust "Tài khoản" alignment */
    .nav-menu ul li .dropdown-toggle {
        padding: 15px 20px; /* Make sure the dropdown item has the same padding */
        display: flex; /* Align icon and text */
        align-items: center; /* Center vertically */
        font-size: 16px; /* Match font size with other items */
    }

    /* Icon colors */
    .nav-menu ul li a .fa-film {
        color: #e74c3c;
    }

    .nav-menu ul li a .fa-calendar-alt {
        color: #3498db;
    }

    .nav-menu ul li a .fa-chair {
        color: #2ecc71;
    }

    .nav-menu ul li a .fa-clock {
        color: #f39c12;
    }

    .nav-menu ul li a .fa-user-tie {
        color: #8e44ad;
    }

    .nav-menu ul li a .fa-user {
        color: #e67e22;
    }

    .nav-menu ul li a .fa-tags {
        color: #1abc9c;
    }

    .nav-menu ul li a .fa-ticket {
        color: #2980b9;
    }

    .nav-menu ul li a .fa-chart-line {
        color: #d35400;
    }

    .nav-menu ul li a .fa-users {
        color: #34495e;
    }

    .nav-menu ul li ul li a .fa-user-shield {
        color: #c0392b;
    }

    .nav-menu ul li ul li a .fa-user-friends {
        color: #16a085;
    }
</style>
