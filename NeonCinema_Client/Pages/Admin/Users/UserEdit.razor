@page "/edituser"

<h3>Chỉnh sửa Thông Tin Người Dùng</h3>

<div class="edit-container">
    <form>
        <div class="form-group">
            <label for="fullName">Tên đầy đủ:</label>
            <input type="text" id="fullName" name="fullName" value="John Doe" />
        </div>

        <div class="form-group">
            <label for="phoneNumber">Số điện thoại:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="0123456789" />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="johndoe@example.com" />
        </div>

        <div class="form-group">
            <label for="gender">Giới tính:</label>
            <select id="gender" name="gender">
                <option value="Male" selected>Nam</option>
                <option value="Female">Nữ</option>
                <option value="Other">Khác</option>
            </select>
        </div>

        <div class="form-group">
            <label for="images">Hình ảnh:</label>
            <input type="file" id="images" name="images" value="ProfilePicture.jpg" />
        </div>

        <div class="form-group">
            <label for="dateOfBirth">Ngày sinh:</label>
            <input type="date" id="dateOfBirth" name="dateOfBirth" value="1990-01-01" />
        </div>

        <div class="form-group">
            <label for="address">Địa chỉ:</label>
            <input type="text" id="address" name="address" value="123 Main St, Springfield" />
        </div>

        <div class="form-group">
            <label for="status">Trạng thái:</label>
            <select id="status" name="status">
                <option value="Active" selected>Hoạt động</option>
                <option value="Inactive">Không hoạt động</option>
            </select>
        </div>

        <div class="form-group">
            <label for="roleID">ID vai trò:</label>
            <input type="text" id="roleID" name="roleID" value="12345678-1234-1234-1234-123456789012" />
        </div>

        <button type="submit" class="btn-submit">Lưu Thay Đổi</button>
    </form>
</div>
<style>
    .edit-container {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

    .btn-submit {
        background-color: #007bff; /* Màu xanh cho nền của nút */
        color: white; /* Màu chữ trắng */
        border: 1px solid #007bff; /* Viền màu xanh */
        padding: 10px 20px; /* Padding cho nút */
        border-radius: 5px; /* Bo góc nút */
        cursor: pointer; /* Con trỏ khi hover lên nút */
        font-size: 16px; /* Kích thước chữ */
    }

        .btn-submit:hover {
            background-color: #0056b3; /* Màu nền khi hover */
            border-color: #0056b3; /* Màu viền khi hover */
        }
</style>
