  @* @page "/create-movie"
@using Microsoft.AspNetCore.Http
@using NeonCinema_Application.DataTransferObject.Countrys
@using NeonCinema_Application.DataTransferObject.Directors
@using NeonCinema_Application.DataTransferObject.Genre
@using NeonCinema_Application.DataTransferObject.Language
@using NeonCinema_Application.DataTransferObject.Movie
@using NeonCinema_Client.Data.IServices.IMoviesServices
@inject HttpClient Http
@inject IMovieservices _movie
@inject NavigationManager Navigation

<h3>Create New Movie</h3>

<EditForm Model="movie" OnValidSubmit="CreateMovie">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name</label>
        <InputText @bind-Value="movie.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <InputTextArea @bind-Value="movie.Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Duration (minutes)</label>
        <InputNumber @bind-Value="movie.Duration" class="form-control" />
    </div>

    <div class="form-group">
        <label>Start Time</label>
        <InputDate @bind-Value="movie.StarTime" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trailer</label>
        <InputText @bind-Value="movie.Trailer" class="form-control" />
    </div>

    <div class="form-group">
        <label>Age Allowed</label>
        <InputNumber @bind-Value="movie.AgeAllowed" class="form-control" />
    </div>

    <div class="form-group">
        <label>Genre</label>
        <InputSelect @bind-Value="movie.GenreID" class="form-control">
            <option value="">Select Genre</option>
            @foreach (var genre in genres)
            {
                <option value="@genre.ID">@genre.Name</option>
            }
        </InputSelect>
    </div>

    <div class="form-group">
        <label>Language</label>
        <InputSelect @bind-Value="movie.LenguageID" class="form-control">
            <option value="">Select Language</option>
            @foreach (var language in languages)
            {
                <option value="@language.ID">@language.Name</option>
            }
        </InputSelect>
    </div>

    <div class="form-group">
        <label>Country</label>
        <InputSelect @bind-Value="movie.CountryID" class="form-control">
            <option value="">Select Country</option>
            @foreach (var country in countries)
            {
                <option value="@country.ID">@country.Name</option>
            }
        </InputSelect>
    </div>

    <div class="form-group">
        <label>Director</label>
        <InputSelect @bind-Value="movie.DirectorID" class="form-control">
            <option value="">Select Director</option>
            @foreach (var director in directors)
            {
                <option value="@director.ID">@director.Name</option>
            }
        </InputSelect>
    </div>

    <div class="form-group">
        <label>Image</label>
        <InputFile OnChange="OnInputFileChange" />
    </div>

    <button type="submit" class="btn btn-primary">Create Movie</button>
</EditForm>

@code {
    private CreateMovieRequest movie = new CreateMovieRequest();
    private List<GenreDTO> genres = new List<GenreDTO>();
    private List<LanguageDTO> languages = new List<LanguageDTO>();
    private List<CountryDTO> countries = new List<CountryDTO>();
    private List<DirectorDTO> directors = new List<DirectorDTO>();
    private IFormFile selectedImage;

    protected override async Task OnInitializedAsync()
    {
        genres = await _movie.GetAllGenre();
        languages = await _movie.GetAllLanguage();
        countries = await _movie.GetAllCountry();
        directors = await _movie.GetAllDirector();
    }

    private async Task CreateMovie()
    {
        
    }

    private void OnInputFileChange(InputFileChangeEventArgs e)
    {
        selectedImage = e.File;
    }
}
