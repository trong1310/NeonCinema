@layout LayoutAdmin
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/Addmovie/createMV.css">

<h2 style=" text-align: center">Thêm Phim</h2>
<div class="container mt-5" style="background-color: white">
    
    <div class="row">
        <!-- Cột bên trái chứa hình ảnh và input upload -->
        <div class="col-md-4 d-flex flex-column align-items-center">
            <!-- Ảnh đại diện với kích thước được CSS cân đối -->
            <div class="imggg">
                <img src="/images/Client/phim1.jpg" class="img-thumbnail mb-3 image-preview" alt="Image Preview">
            </div>

            <!-- Input upload ảnh -->
            <div class="up text-center">
                <label class="btn btn-primary" for="fileUpload">Upfile</label>
                <input type="file" id="fileUpload" class="form-control" style="display: none;" />
            </div>
            
        </div>

        <!-- Cột bên phải chứa các trường thông tin -->
        <div class="col-md-8">
            <!-- Trường nhập 1: Tên phim -->
            <div class="form-group mb-3">
                <label for="name">Movie Name</label>
                <input type="text" id="name" class="form-control" placeholder="Enter movie name" />
            </div>
            <div class="form-group mb-3">
                <label for="name">Quốc Gia</label>
                <input type="text" id="name" class="form-control" placeholder="Enter movie name" />
            </div>
            <div class="row">
                <!-- Ngôn Ngữ -->
                <div class="col-md-6 form-group mb-3">
                    <label for="language">Ngôn Ngữ</label>
                    <input type="text" id="language" class="form-control" placeholder="Enter language" />
                </div>

                <!-- Độ tuổi cho phép -->
                <div class="col-md-6 form-group mb-3">
                    <label for="age">Độ tuổi cho phép</label>
                    <select id="age" class="form-control">
                       
                        <option value="15">T15</option>
                        <option value="18">T18</option>
                        <option value="20">T20</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <!-- Thể loại dài hơn -->
                <div class="col-md-8 form-group mb-3">
                    <label for="genre">Thể loại</label>
                    <input type="text" id="genre" class="form-control" placeholder="Enter movie genre" />
                </div>

                <!-- Thời lượng ngắn hơn -->
                <div class="col-md-4 form-group mb-3">
                    <label for="duration">Thời lượng</label>
                    <input type="text" id="duration" class="form-control" placeholder="Enter duration" />
                </div>
            </div>

            <!-- Trường nhập 3: Ngày phát hành -->
            <div class="form-group mb-3">
                <label for="releaseDate">Ngày phát hành</label>
                <input type="datetime-local" id="releaseDate" class="form-control" />
            </div>

            <!-- Trường nhập 4: Mô tả -->
            <div class="form-group mb-3">
                <label for="description">Mô tả</label>
                <textarea id="description" class="form-control" rows="3" placeholder="Enter movie description"></textarea>
            </div>

            <!-- Trường nhập 5: Trailer URL -->
            <div class="form-group mb-3">
                <label for="trailer">Video demo phim</label>
                <input type="text" id="trailer" class="form-control" placeholder="Enter trailer URL" />
            </div>

            <!-- Trường nhập 6: Thể loại phim (select) -->
            
        </div>
    </div>
</div>

