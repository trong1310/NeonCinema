@page "/cinemaslist"
@inject NavigationManager Navigation

<link rel="stylesheet" href="/CINEMA/cinemaslist.css">

<div class="cinema-container">
    <!-- Large Image Placeholder -->
    <div class="cinema-image">
        <img src="https://baomoi.vinhphuc.gov.vn/Upload/baiviet/2024/1/6/nthuong/990_d-a-2.jpg" alt="Cinema Image" class="image-large" />
        <button class="btn-overlay" @onclick="NavigateToUpdateCinema">Update</button>
    </div>

    <!-- Cinema Information Fields -->
    <div class="cinema-details">
        <div class="hh">
            <h3 class="abc"> NEON CINEMAS</h3>
        </div>

        <div class="form-group">
            <label for="location">Location:  <strong>Ba Vì - Hà Nội</strong></label>
        </div>

        <div class="form-group">
            <label for="phone">Phone Number: <strong>0388008268</strong></label>
        </div>

        <div class="form-group">
            <label for="website">Website: <strong>cgv.vn</strong></label>
        </div>

        <div class="form-group">
            <label for="opening-hours">Opening Hours: <strong>08:00</strong></label>
        </div>

        <div class="form-group">
            <label for="closing-hours">Closing Hours: <strong>02:00</strong></label>
        </div>

        <div class="form-group">
            <label for="room-number">Number of Rooms: <strong>200</strong></label>
        </div>
    </div>
</div>

@code {
    private void NavigateToUpdateCinema()
    {
        Navigation.NavigateTo("/update-cinema");
    }
}
