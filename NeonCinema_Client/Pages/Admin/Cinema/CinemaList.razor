@page "/list-movie"

<MudPaper Class="p-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3>Nhân viên</h3>
        <div>
            <button class="btn btn-outline-primary">Tài khoản</button>
            <button class="btn btn-outline-secondary">Nhân viên</button>
        </div>
    </div>

    <MudCard Class="mt-3 p-3">
        <div class="row">
            <div class="col-md-4">
                <!-- Specify the type (T="string") for MudTextField -->
                <MudTextField T="string" Placeholder="Tìm kiếm theo mã, tên..." Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" />
            </div>
            <div class="col-md-4">
                <!-- Specify the type (T="string") for MudSelect -->
                <MudSelect T="string" Placeholder="Chọn giới tính" Variant="Variant.Outlined">
                    <MudSelectItem T="string">Nam</MudSelectItem>
                    <MudSelectItem T="string">Nữ</MudSelectItem>
                </MudSelect>
            </div>
            <div class="col-md-4 d-flex align-items-center">
                <label>Trạng thái:</label>
                <!-- Correctly bind the value and use valid variable references -->
                <MudRadioGroup T="string" Orientation="Horizontal" @bind-Value="status">
                    <MudRadio T="string">Tất cả</MudRadio>
                    <MudRadio T="string">Đang làm việc</MudRadio>
                    <MudRadio T="string">Đã nghỉ việc</MudRadio>
                </MudRadioGroup>
            </div>
        </div>
    </MudCard>

    <MudTable Class="mt-3" T="Employee">
        <HeaderContent>
            <MudTh>STT</MudTh>
            <MudTh>Hình Ảnh</MudTh>
            <MudTh>Mã</MudTh>
            <MudTh>Tên</MudTh>
            <MudTh>Ngày Sinh</MudTh>
            <MudTh>Số Điện Thoại</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Địa Chỉ</MudTh>
            <MudTh>Trạng Thái</MudTh>
            <MudTh>Hành Động</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="STT">@context.STT</MudTd>
            <MudTd DataLabel="Hình Ảnh"><img src="@context.ImageUrl" alt="Hình ảnh" style="width: 50px; height: 50px; border-radius: 50%;" /></MudTd>
            <MudTd DataLabel="Mã">@context.Id</MudTd>
            <MudTd DataLabel="Tên">@context.Name</MudTd>
            <MudTd DataLabel="Ngày Sinh">@context.DateOfBirth.ToString("dd/MM/yyyy")</MudTd>
            <MudTd DataLabel="Số Điện Thoại">@context.PhoneNumber</MudTd>
            <MudTd DataLabel="Email">@context.Email</MudTd>
            <MudTd DataLabel="Địa Chỉ">@context.Address</MudTd>
            <MudTd DataLabel="Trạng Thái">
                <MudChip T="string" Color="@(context.Status == "active" ? Color.Success : Color.Error)">
                    @context.Status == "active" ? "Đang Làm Việc" : "Đã Nghỉ Việc"
                </MudChip>
            </MudTd>

            <MudTd DataLabel="Hành Động">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    // Example data model for employee
    public class Employee
    {
        public int STT { get; set; }
        public string ImageUrl { get; set; }
        public string Id { get; set; }
        public string Name { get; set; }
        public DateTime DateOfBirth { get; set; }
        public string PhoneNumber { get; set; }
        public string Email { get; set; }
        public string Address { get; set; }
        public string Status { get; set; }
    }

    // Bound variable for status selection in MudRadioGroup
    private string status = "all";
}